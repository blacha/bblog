{
    "rules": {
        "adjacent-overload-signatures": true,
        "member-ordering": [true, {
            "order": "statics-first"
        }], // Maybe
        "no-internal-module": true,
        "no-namespace": true,
        "no-reference": true,
        "no-var-requires": true, // Maybe
        "curly": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-console": [true],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-unused-expression": true,
        "no-unused-new": true,
        "switch-default": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "use-isnan": true,
        "indent": [true, "spaces"],
        "eofline": true,
        "linebreak-style": [
            true, "LF"
        ],
        "no-trailing-whitespace": true,
        "trailing-comma": [true, {
            "multiline": "never",
            "singleline": "never"
        }],
        "class-name": true,
        "array-type": [true, "array"],
        "new-parens": true,
        "no-consecutive-blank-lines": [true, 3],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": true,
        "one-line": [true, "check-catch", "check-finally", "check-else"],
        "ordered-imports": [true, "case-insensitive"],
        "quotemark": [
            true, "single"
        ],
        "semicolon": [true, "always"],
        "variable-name": [
            true,
            "ban-keywords"
        ]
    }
}